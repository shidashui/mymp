<view wx:if="{{true}}">
	<view class="" wx:for="{{3}}" wx:key>
		<view class="cu-card case {{isCard?'no-card':''}}">
		<view class="cu-item shadow">
			<view class="image">
				<image src="https://ossweb-img.qq.com/images/lol/web201310/skin/big10006.jpg" mode="widthFix"></image>
				<view class="cu-tag bg-red">活动</view>
				<view class="cu-bar bg-shadeBottom">
					<text class="text-cut">这里是活动的标题，简介</text>
				</view>
			</view>
			<view class="cu-list menu-avatar">
				<view class="cu-item">
					<view class="cu-avatar round lg" style="background-image:url(https://ossweb-img.qq.com/images/lol/web201310/skin/big10006.jpg);">
						<view class="cu-tag badge {{index%2==0?'cuIcon-female bg-pink':'cuIcon-male bg-blue'}}"></view>
					</view>
					<view class="content flex-sub">
						<view class="text-grey">佚名</view>
						<view class="text-gray text-sm flex justify-between">
							十天前
							<view class="text-gray text-sm">
								<text class="cuIcon-attentionfill margin-lr-xs"></text> 10
								<text class="cuIcon-appreciatefill margin-lr-xs"></text> 20
								<text class="cuIcon-messagefill margin-lr-xs"></text> 30
							</view>
						</view>
					</view>
				</view>
			</view>
		</view>
	</view>
	</view>
</view>
<view wx:else>
	<view  class="cu-item">
		<view class="text-center text-xxl text-black ">
			<view class="">
				<image class="" mode="aspectFit" src="../../../images/product.png">
				</image>
			</view> 
			暂请期待
		</view>
	</view>
</view>
